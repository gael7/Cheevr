<div>
  <div class="section light-green">
    <h3 class="header center white-text">Create New Quiz</h3>
  </div>
</div>
<div class="container">
  <br/>

  <!-- Form -->
  <div class="row">
    <form class="col s12">

      <!-- Name/type -->
      <div class="row">
        <div class="input-field col m6 s12">
          <input id="name" type="text" class="validate">
          <label for="name">Quiz Name</label>
        </div>
        <div class="input-field col m6 s6">
          <select id="questionType">
            <option value="" disabled selected>Type of Quiz</option>
            <option value="trueFalse">True or False</option>
            <option value="multipleChoice">Multiple Choice</option>
          </select>
        </div>
      </div>

      <!-- Description -->
      <div class="row">
        <div class="input-field col s12">
          <textarea class="materialize-textarea" id="desc"></textarea>
          <label for="desc">Description</label>
        </div>
      </div>
      <div class="divider"></div><br/>

      <!-- Question 1 -->
      <div class="row">
        <div class="input-field col m9 s12">
          <input id="q_1" type="text" class="validate">
          <label for="q_1">Question 1</label>
        </div>
        <div class="input-field col m3 s6">
          <select>
            <option value="true">true</option>
            <option value="false">false</option>
          </select>
        </div>
      </div>
      <div class="divider"></div><br/>

      <!-- Question 2 -->
      <div class="row">
        <div class="input-field col m9 s12">
          <input id="q_2" type="text" class="validate">
          <label for="q_2">Question 2</label>
        </div>
        <div class="input-field col m3 s6">
          <select>
            <option value="true">true</option>
            <option value="false">false</option>
          </select>
        </div>
      </div>
      <div class="divider"></div><br/>

      <!-- Question 3 -->
      <div class="row">
        <div class="input-field col m9 s12">
          <input id="q_3" type="text" class="validate">
          <label for="q_3">Question 3</label>
        </div>
        <div class="input-field col m3 s6">
          <select>
            <option value="true">true</option>
            <option value="false">false</option>
          </select>
        </div>
      </div>
      
    </form>
  </div>
  <div class="divider"></div>
  <div class="section" id="buttonSection">
    <br/>
    <div class="row">
      <div class="col s4 center">
        <a class="btn-large waves-effect waves-light light-green darken-2" id="addQuestion"><i class="material-icons right">note_add</i>Add Question</a>
      </div>
      <div class="col s4"></div>
      <div class="col s4 center">
        <a class="btn-large waves-effect waves-light light-green darken-2" id="submitQuiz"><i class="material-icons right">send</i>Submit</a>
      </div>
    </div>
  </div> 
</div>

<script src="assets/js/create.js"></script>