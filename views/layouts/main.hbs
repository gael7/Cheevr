<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no"/>
    <title>Cheevo</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:600,800" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/assets/css/materialize.css" media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/assets/css/style.css" media="screen,projection"/>
  </head>
  <body>
    <script src="assets/js/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="assets/js/materialize.js"></script>
    <script src="assets/js/init.js"></script>
    <script src="assets/js/app.js"></script>

    <!-- Desktop dropdown -->
    {{#if isLoggedIn}}
    <ul id="dropdown_desktop" class="dropdown-content">
      <li><a href="/user_results">My Results</a></li>
      <li><a href="/user_quizzes">My Quizzes</a></li>
      <li><a href="/user_create">Create Quiz</a></li>
    </ul>
    {{/if}}

    <!-- Nav -->
    <nav class="white" role="navigation">
      <div class="nav-wrapper container">
        <a href="/" class="brand-logo">Cheevo</a>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-small-only">
          <li><a href="/search"><i class="material-icons">search</i></a></li>
          <li><a href="/gettingStarted">Getting Started</a></li>
          {{#if isLoggedIn}}
            <li><a class="dropdown-button" href="#!" data-activates="dropdown_desktop">{{username}}'s Account<i class="material-icons right">arrow_drop_down</i></a></li>
          {{else}}
            <li><a href="/auth/amazon">Login</a></li>
          {{/if}}
        </ul>
        <ul class="side-nav" id="nav-mobile">
          <li><a href="/gettingStarted">Getting Started</a></li>
          {{#if isLoggedIn}}
            <li><a href="/search">Search Quizzes</a></li>
            <li><a href="/user_results">My Results</a></li>
            <li><a href="/user_quizzes">My Quizzes</a></li>
            <li><a href="/user_create">Create Quiz</a></li>
          {{else}}
            <li><a href="/auth/amazon">Login</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>

    <!-- Main -->
    <main>
      {{{ body }}}
    </main>

    <!-- Footer -->
    <footer class="page-footer light-green darken-2">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">Company Bio</h5>
            <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job. Any amount would help support and continue development on this project and is greatly appreciated.</p>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Â© 2016 Copyright Cheevo Inc.
        </div>
      </div>
    </footer>
  </body>
</html>
