<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container" id="userInfo">
      <br><br>
      <h1 class="header center light-green-text text-darken-2">User</h1>
    </div>
  <div class="parallax"><img src="/assets/images/diagmonds_@2X.png" alt="Change background for an original"></div>
  </div>
</div>
<div class="container">
  <div class="section" id="displayQuizzes">
    <div class="row">

    </div>
  </div>
</div>

<script>
var infoUser={
  getUser: function(){
    var currentURL=window.location.origin;
    $.get(currentURL+'/api/userStats').done(function(data){
      console.log(data);
      infoUser.displayQ(data);
    });
  },
  displayQ: function(user){
    $("#userInfo").html("<br><br><h1 class='header center light-green-text text-darken-2'>"+user.displayName+"</h1>");
    var quizType;
    for (q=0; q<user.quizzes.length; q++){
      if(user.quizzes[q].type==='trueFalse'){
        quizType="True or False";
      } else if (user.quizzes[q].type==='multipleChoice') {
        quizType="Multiple Choice";
      }
    $("#displayQuizzes").append("<div class='row'><div class='col s12 m6'><div class='card blue-grey darken-1'><div class='card-content white-text'><span class='card-title'>"+user.quizzes[q].name+"</span><p>Type: "+quizType+"</p><p>Say: 'Alexa, ask cheevo to quiz me on "+user.quizzes[q].name+"'</p></div><div class='card-action' id='displayQ'><a href='/user_edit/"+user.quizzes[q].id+"'>Edit</a><a href='#modal1' id='delete"+user.quizzes[q].name+"'>Delete</a></div></div></div></div>");
    $("#delete"+user.quizzes[q].name).on("click", function(){
      $("displayQuizzes").append("<div id='modal1' class='modal'><div class='modal-content'><h4>Modal Header</h4><p>A bunch of text</p></div><div class='modal-footer'><a href'#!' class=' modal-action modal-close waves-effect waves-green btn-flat'>Agree</a></div></div>")
      $('#modal1').modal('open');
    });
    }

  }
};
$(document).ready(function(){
  infoUser.getUser();
});
</script>