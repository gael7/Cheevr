<div class="section light-green">
  <h3 class="header center white-text">{{username}}'s Quizzes</h3>
</div>
<div class="row">
  <div class="col s10 offset-s1">
    <br/>
  {{#each quizzes}}
    <div class="row">
      <div class="col s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{name}}</span>
            <div class="right pad-right">
              <br/>Taken: {{totalAttempts}} Times
            </div>
            <p class="flavor-text grey-text text-lighten-1">Say: "Alexa, ask cheevo to quiz me on {{name}}"</p>
            <div class="chip">{{desc}}</div>
            <br/><br/>
            {{#each Questions}}
              <div class="row no-margin">
                <div class="col s12">
                  <div class="card grey darken-1">
                    <div class="card-content white-text">
                      <p>{{#if choiceA}}Question{{else}}True or false{{/if}}: {{q}}</p>
                      {{#if choiceA}}
                      <ul class="no-margin">
                        <li>A: {{choiceA}}</li>
                        <li>B: {{choiceB}}</li>
                        <li>C: {{choiceC}}</li>
                        <li>D: {{choiceD}}</li>
                      </ul>
                      {{/if}}
                      <p>Answer: {{a}}</p>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
  </div>
</div>
